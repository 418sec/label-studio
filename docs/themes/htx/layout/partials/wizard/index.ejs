<%- css('css/wizard') %>

<%- partial('partials/wizard/colors') %>
<%- partial('partials/wizard/tpls') %>
<%- partial('partials/wizard/tags') %>
<%- partial('partials/wizard/recipes') %>
<%- partial('partials/wizard/recipe') %>
<%- partial('partials/wizard/scripts') %>

<div class="wizard" data-mode="list">
  <div class="select__recipe" data-page="list">
    <aside class="recipes__sidebar">
      <h3>Applications</h3>
      <ul></ul>
      <h3>Advanced</h3>
      <a href="/playground" class="button">Open config</a>
    </aside>
    <main>
      <h1>Computer Vision </h1>
      <ul>
        <li data-template="recipe">
          <img src="" alt="" />
          <div class="recipe__type">Label studio</div>
          <h3>Recipe's name</h3>
        </li>
      </ul>
    </main>
  </div>
  <div data-page="recipe" data-template="page">
    <a class="back" href="">Back to Templates</a>
    <h1>
      <span>Recipe's name</span>
      <a class="button" href="/playground" target="_blank" name="config">Go to config</button>
    </h1>
    <div class="configure">
      <button type="button" name="details">Show details</button>
      <div class="details" style="display: none"></div>
      <div class="configure__object">
        <h4>Configure data</h4>
        <p>
          <span class="object__type"></span> provided by
          <select><option>$data</option></select>
        </p>
      </div>
      <div class="configure__labels">
        <form class="add__labels" action="">
          <h4>Add label names</h4>
          <textarea name="labels" id="" cols="30" rows="5"></textarea>
          <input type="button" value="Add">
        </form>
        <ul>
          <li data-template="label">
            <input type="color" class="color" value="">
            <span></span>
            <input type="button" class="delete" value="ðŸ—‘">
          </li>
        </ul>
      </div>
      <ul class="configure__settings">
        <li>
          <h4>Configure <span class="object__type"></span></h4>
          <ul class="settings"></ul>
        </li>
      </ul>
    </div>

    <div class="lsf">
      <iframe frameborder="0"></iframe>
    </div>
  </div>
</div>

<script>
initTemplates()
initRecipesList()
</script>
