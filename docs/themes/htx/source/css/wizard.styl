button()
  background: #2593fc;
  color: #fff;
  border: 0;
  border-radius: 3px;
  padding: 4px 16px;
  cursor: pointer;
  font: inherit;

.ls-panel
  display: none

.wizard > div
  display: none

.wizard[data-mode=list] > [data-page=list]
  display: flex
  gap: 48px
.wizard[data-mode=recipe] > [data-page=recipe]
  display: flex
  flex-wrap: wrap
  column-gap: 2rem
  padding-top: 1rem

.recipes__sidebar
  width: 160px
  h3:not(:first-child)
    margin-top: 2em
  ul
    padding: 0;
    list-style: none
  li
    margin: 12px 0
    cursor: pointer
    &:hover
      text-decoration: underline
    &.active
      font-weight: 600
      list-style: disc
  a.button
    button()

.select__recipe main
  ul
    display: flex
    gap: 2rem
    padding: 0
  li
    display: flex
    flex-direction: column
    row-gap: 12px
    background: #EDF4F7
    padding: 1rem
    border-radius: 8px
    cursor: pointer
    &:hover
      background: #EDF4F7aa
  .recipe__type
    line-height: 16px
    &::before
      content: ""
      display: inline-block
      width: 16px
      height: 16px
      background: url(/images/logo.png) 0/16px
      vertical-align: bottom
      margin-right: 8px
  h3
    margin: 0
  img
    width: 200px
    border-radius: 4px

.wizard
  a.back::before
    content: '\2190'
    margin-right: 8px

  h1
    font-size: 1.4rem
    width: 100%
    display: flex

    a[name=config]
      margin-left: auto
      font-size: 1rem
      font-weight: 400
      background: #ccc
      &:hover
        background: #2593fc;
        &::before
          content: "Advanced! "

  a.button,
  button,
  input[type=button]
    button()

  .configure
    padding: 0 1rem
    margin: 0 -1rem 2rem
    background: #EDF4F7
    border-radius: 8px
    flex-grow: 1
    position: relative

    button[name=details]
      position: absolute
      right: 0
      top: -2.7em

    .details
      position: absolute
      left: 0
      right: 0
      top: 0
      bottom: 0
      background: #EDF4F7
      border-radius: 8px
      padding: 1rem

  .configure__object
    select
      padding: 0px 4px
      font: inherit
      border-color: #dededf

  .configure__labels
    display: flex
    border: 1px solid #DEDEDF
    border-width: 1px 0
    padding: 1em 0
    max-height: 200px
    .add__labels
      display: flex
      flex-direction: column
      align-items: flex-start
      input[type=button]
        background: #2593FC
        color: white
        border: 0
        border-radius: 3px
        padding: 4px 16px
        cursor: pointer
        font: inherit
    h4
      margin: 0
    textarea
      flex-grow: 1
      margin: 8px 0
      border-color: #DEDEDF
      margin-left: -1px
      font: inherit
    ul
      overflow-y: auto
      padding: 0 2em
      margin: 0
      list-style: none
      li
        margin: 12px 0
        display: flex
        gap: 8px
        .color
          width: 20px
          padding: 0
          border: 0
        .delete
          border: 0
          border-radius: 4px
          background: none
          cursor: pointer
          &:hover
            background: #f002

  ul.configure__settings
    padding: 0
    ul
      padding: 0
    li
      list-style: none
      margin: 12px 0
    label
      cursor: pointer
    input[type=checkbox]
      margin-right: 8px

  .lsf
    flex-grow: 10
    min-width: 500px
    iframe
      width: 100%
      min-height: 500px
