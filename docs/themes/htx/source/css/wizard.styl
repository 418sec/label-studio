.ls-panel
  display: none

.wizard > div
  display: none

.wizard[data-mode=list] > [data-page=list]
  display: block
.wizard[data-mode=recipe] > [data-page=recipe]
  display: flex
  flex-wrap: wrap
  column-gap: 2rem
  padding-top: 1rem

.select__recipe
  ul
    display: flex
    gap: 2rem
    padding: 0
  li
    display: flex
    flex-direction: column
    row-gap: 12px
    background: #EDF4F7
    padding: 1rem
    border-radius: 8px
    cursor: pointer
    &:hover
      background: #EDF4F7aa
  .recipe__type
    line-height: 16px
    &::before
      content: ""
      display: inline-block
      width: 16px
      height: 16px
      background: url(/images/logo.png) 0/16px
      vertical-align: bottom
      margin-right: 8px
  h3
    margin: 0
  img
    width: 200px
    border-radius: 4px

.wizard
  a.back::before
    content: '\2190'
    margin-right: 8px

  h1
    font-size: 1.4rem
    width: 100%

  .configure
    padding: 0 1rem
    margin: 0 -1rem 2rem
    background: #EDF4F7
    border-radius: 8px
    flex-grow: 1

  .configure__object
    select
      padding: 0px 4px
      font: inherit
      border-color: #dededf

  .configure__labels
    display: flex
    border: 1px solid #DEDEDF
    border-width: 1px 0
    padding: 1em 0
    max-height: 200px
    .add__labels
      display: flex
      flex-direction: column
      align-items: flex-start
      input[type=button]
        background: #2593FC
        color: white
        border: 0
        border-radius: 3px
        padding: 4px 16px
        cursor: pointer
        font: inherit
    h4
      margin: 0
    textarea
      flex-grow: 1
      margin: 8px 0
      border-color: #DEDEDF
      margin-left: -1px
      font: inherit
    ul
      overflow-y: auto
      padding: 0 2em
      margin: 0
      list-style: none
      li
        margin: 12px 0
        display: flex
        gap: 8px
        .delete
          border: 0
          border-radius: 4px
          background: none
          cursor: pointer
          &:hover
            background: #f002

  ul.configure__settings
    padding: 0
    ul
      padding: 0
    li
      list-style: none
      margin: 12px 0
    label
      cursor: pointer
    input[type=checkbox]
      margin-right: 8px

  .lsf
    flex-grow: 10
    min-width: 500px
    iframe
      width: 100%
      min-height: 500px
